<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".TextFragment">

    <Button
        android:id="@+id/text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_button_text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:paddingVertical="15dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp"
        app:cornerRadius="10dp"
        android:paddingHorizontal="25dp"
        android:backgroundTint="@color/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:text="@string/text_tv_up"
        android:textColor="@color/text_tv_up"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/text_tv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_margin="40dp"
        android:text="@string/text_tv_down"
        android:textColor="@color/text_tv_down"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/text_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_button"
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:text="@string/text_tv_right"
        android:textColor="@color/text_tv_right"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/text_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_button"
        android:textStyle="bold"
        android:layout_margin="40dp"
        android:text="@string/text_tv_left"
        android:textColor="@color/text_tv_left"
        android:clickable="true"
        android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>